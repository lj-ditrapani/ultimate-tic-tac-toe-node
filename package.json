{
  "name": "ultimate-tic-tac-toe",
  "version": "0.0.1",
  "description": "ultimate-tic-tac-toe",
  "type": "module",
  "scripts": {
    "client": "node dist/client.js",
    "server": "node dist/server.js",
    "client-dev": "ts-node-esm src/client.ts",
    "server-dev": "ts-node-esm src/server.ts",
    "test": "jest --coverage",
    "fmt": "prettier --write '*.yaml' '*.json'",
    "fmtcheck": "prettier --check '*.yaml' '*.json'",
    "eslint": "eslint --fix *.ts 'src/**/*.ts' 'test/**/*.ts'",
    "eslintcheck": "eslint *.ts 'src/**/*.ts' 'test/**/*.ts'",
    "check": "npm run fmtcheck && npm run eslintcheck",
    "lint": "npm run fmt && npm run eslint",
    "ncu": "ncu -u && rm -fr node_modules package-lock.json && npm install",
    "tsc": "tsc",
    "doc": "typedoc --out doc/ src",
    "ci": "npm run check && tsc && npm test",
    "all": "npm run lint && tsc && npm test"
  },
  "author": "Jonathan Di Trapani",
  "license": "ISC",
  "dependencies": {
    "@trpc/client": "^10.2.0",
    "@trpc/server": "^10.2.0",
    "ansi-colors": "^4.1.3",
    "dotenv": "^16.0.3",
    "node-fetch": "^3.3.0",
    "ramda": "^0.28.0",
    "term-grid-ui": "^0.7.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@types/node": "^18.11.9",
    "@types/ramda": "^0.28.20",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "npm-check-updates": "^16.4.3",
    "prettier": "^2.8.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  }
}
